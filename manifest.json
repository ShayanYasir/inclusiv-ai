{
  "manifest_version": 3,
  "name": "Inklusiv",
  "version": "1.0",
  "description": "Copilot for web accessibility",
  "permissions": [
    "storage", "activeTab", "scripting", "tabs", "webNavigation", "webRequest", "webRequestBlocking"
  ],
  "host_permissions": [
    "http://*/*", 
    "https://*/*"
  ],
    "web_accessible_resources": [
      {
        "resources": ["assets/fonts/*"],
        "matches": ["<all_urls>"]
      }
    ],
  "content_scripts": [
    {
      "js": ["scripts/colorblind.js"],
            "matches": ["<all_urls>"]
          },
          {
            "js": ["scripts/adhd.js"],
            "matches": ["<all_urls>"]
          },
          {
            "js": ["scripts/dyslexia.js", "scripts/pageSnippetContent.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;"
  }
}
